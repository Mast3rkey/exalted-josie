{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"]
    },

    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [{ "name": "next" }]
  },

  "include": [
    "next-env.d.ts",
    "app",
    "pages",
    "components",
    "lib",
    "types",
    ".next/types/**/*.ts"
  ],

  "exclude": [
    "node_modules",
    "scripts",
    "tools",
    "tests",
    "tokens",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
